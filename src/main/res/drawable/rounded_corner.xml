<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- view background color -->
    <gradient
        android:startColor="#ff09b2c1"
        android:endColor="#ff076bbf"
        android:angle="270"
        android:centerColor="@color/color_blue"
    />

    <!-- view border color and width -->
    <stroke
        android:width="2dp"
        android:color="@color/color_thick_grey" >
    </stroke>

    <!-- If you want to add some padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"    >
    </padding>

    <!-- Here is the corner radius -->
    <corners
        android:radius="8dp"   >
    </corners>

</shape>