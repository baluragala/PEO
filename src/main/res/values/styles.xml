<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="labelStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_thick_grey</item>
    </style>

    <style name="labelDetailStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/body_background</item>
    </style>

    <style name="labelDetailStyleDark">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_thick_grey</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_thick_grey</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@color/color_thick_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_blue</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HomeTitle">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/color_thick_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>



    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="lightGreyTC_13sp">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_light_grey</item>
    </style>




</resources>
